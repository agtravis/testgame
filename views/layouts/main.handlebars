<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <script src="https://code.jquery.com/jquery.js"></script>
    <script type="text/javascript" src="assets/js/external/phaser.min.js"></script>
    <script type="text/javascript" src="assets/js/Scene1.js"></script>
    <script type="text/javascript" src="assets/js/Scene2.js"></script>
    <script type="text/javascript" src="assets/js/Scene3.js"></script>
    <script type="text/javascript" src="assets/js/beam.js"></script>
    <script type="text/javascript" src="assets/js/explosion.js"></script>
    <script type="text/javascript" src="assets/js/game.js"></script>
    <title>My Game with PhaserJs</title>
    <style>
        #GameCanvas {}
    </style>
</head>

<body>
    <h1>Welcome to my game</h1>
    <p>This is my game page.</p>
    <div id="GameCanvas"></div>
    {{{ body }}}
    <div id="high-scores-list"></div>

    <script>
        $.get(`/api/highscores`, data => {
            console.log(data);
            for (const score of data) {
                appendRow(score);
            }
        })

        function appendRow(rowObj) {
            const newName = document.createElement('p');
            newName.textContent = rowObj.name;
            document.getElementById(`high-scores-list`).appendChild(newName);
            const newScore = document.createElement('p');
            newScore.textContent = rowObj.score;
            document.getElementById(`high-scores-list`).appendChild(newScore);
        }
    </script>
</body>

</html>